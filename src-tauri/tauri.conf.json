{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Infographics",
  "version": "0.1.0",
  "identifier": "com.infographics.app",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Infographics",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {}
}
